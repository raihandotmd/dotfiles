# Ghostty Configuration

# Shell Integration
shell-integration = zsh
shell-integration-features = no-cursor
window-theme = dark
theme = Adwaita Dark
title = ""
background = #1e1e1e
font-size = 20
mouse-hide-while-typing = true
window-decoration = false
window-save-state = always

cursor-style = block

# Keybindings Configuration

# Split Navigation and Management
keybind = ctrl+a>b=new_split:down
keybind = ctrl+a>v=new_split:right
keybind = ctrl+a>r=reload_config
keybind = ctrl+a>x=close_surface
keybind = ctrl+a>n=new_window
keybind = ctrl+a>e=equalize_splits

# Navigate between splits
keybind = ctrl+a>j=goto_split:bottom
keybind = ctrl+a>k=goto_split:top
keybind = ctrl+a>h=goto_split:left
keybind = ctrl+a>l=goto_split:right

# Tab Management
keybind = ctrl+a>c=new_tab
keybind = ctrl+a>shift+]=next_tab
keybind = ctrl+a>shift+[=previous_tab
keybind = ctrl+a>comma=move_tab:-1
keybind = ctrl+a>period=move_tab:1

# Resize splits
keybind = ctrl+a>up=resize_split:up,80
keybind = ctrl+a>down=resize_split:down,80
keybind = ctrl+a>left=resize_split:left,80
keybind = ctrl+a>right=resize_split:right,80


# Quick Tab Switching (1-9)
keybind = ctrl+a>1=goto_tab:1
keybind = ctrl+a>2=goto_tab:2
keybind = ctrl+a>3=goto_tab:3
keybind = ctrl+a>4=goto_tab:4
keybind = ctrl+a>5=goto_tab:5
keybind = ctrl+a>6=goto_tab:6
keybind = ctrl+a>7=goto_tab:7
keybind = ctrl+a>8=goto_tab:8
keybind = ctrl+a>9=goto_tab:9

# Miscellaneous Keybindings
keybind = ctrl+a>t=toggle_window_decorations
keybind = ctrl+a>`=open_config
